{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "paths": {
      "tc-message-toolkit/stream": ["./src/lib/stream/node-stream.ts"]
    }
  },
  "include": ["src"]
}
